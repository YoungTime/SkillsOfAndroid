<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a01378359.testapp.anim.ObjectAnimatorActivity">

    <ImageView
        android:id="@+id/iv_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pig"
        android:layout_centerInParent="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TableRow>
            <Button
                android:id="@+id/btn_anim_value_alpha"
                android:text="渐变"/>
            <Button
                android:id="@+id/btn_anim_value_translate"
                android:text="平移"/>
            <Button
                android:id="@+id/btn_anim_value_scale"
                android:text="缩放"/>
            <Button
                android:id="@+id/btn_anim_value_rotate"
                android:text="旋转"/>
            <Button
                android:id="@+id/btn_anim_value_group"
                android:text="组合"/>

        </TableRow>
    </TableLayout>


</RelativeLayout>
